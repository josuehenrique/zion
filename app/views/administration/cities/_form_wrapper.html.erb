<div class="<%= 'row col-xs-12' unless request.xhr? %>">
  <%= simple_form_for resource.localized,
    url: form_action_link(country_id: params[:country_id], state_id: params[:state_id]),
    method: resource.persisted? ? :put : :post do |f| %>
    <%= render 'form_base_errors', f: f %>
    <%= render 'form', f: f %>
    <%= render 'form_buttons', f: f %>
  <% end %>
</div>
