<%= f.input :name %>
<%= f.input :email %>
<%= f.input :avatar, hint: t('hints.user.avatar') %>

<% if resource.persisted? %>
  <%= f.input :password,
    placeholder: '********',
    hint: t('hints.user.password.should_be_between_six_and_ten_characteres') %>
  <%= f.input :password_confirmation, placeholder: '********' %>
<% else %>
  <%= f.input :password, hint: t('hints.user.password.should_be_between_six_and_ten_characteres') %>
  <%= f.input :password_confirmation, required: true %>
<% end %>
