<%= list_table do %>
  <div class='table-option clearfix'>
    <div class=''>
      <%= link_to raw("<i class='icon-plus'></i> "+ t('buttons.new', resource: singular, cascade: true)),
                  new_resource_path(country_id: params[:country_id]), class: ' btn btn-large btn-primary' if create? %>
    </div>
     <%= render partial: 'search' %>
  </div>

  <table class="responsive table">
    <thead>
    <%= render 'list_head' %>
    </thead>

    <tbody>
    <%= render 'list_body' %>
    </tbody>
  </table>
  <div class="pagination pagination-centered">
    <%= link_to raw("<i class='icon-arrow-left'></i>" + (I18n.t 'back')),
                administration_countries_path, class: 'btn btn-large', style: 'float:left;' %>
    <%= paginate(params) %>
  </div>
<% end %>
