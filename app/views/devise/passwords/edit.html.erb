<h1>Mudar sua senha</h1>

<%= form_for(resource_class.new, url: password_path(resource_class), html: { method: :put }) do |f| %>
  <%= devise_error_messages! if resource %>
  <%= f.hidden_field :reset_password_token, value: params[:reset_password_token] %>

  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="icon-key bigger-110"></i></span>
      <%= f.password_field :password, label: 'Nova senha', required: true, class: 'form-control',
        placeholder: (t 'login.password'),
        autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="icon-key bigger-110"></i></span>
      <%= f.password_field :password_confirmation, required: true, class: 'form-control',
        placeholder: (t 'activerecord.attributes.associate_user.password_confirmation'),
        autofocus: true %>
    </div>
  </div>

  <%= f.submit 'Mudar minha senha', class: 'btn btn-sm btn-primary' %>
<% end %>
